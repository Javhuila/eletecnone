    private void jButtonmulActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        //Procedimiento para cargue la multiplicación de dos numeros
        try{
            numeros[0] = Integer.parseInt(jTextField1.getText());
            jTextField1.setText("");
            multiplicación = true;
        }catch(Exception e){
        
        }
    }                                          

